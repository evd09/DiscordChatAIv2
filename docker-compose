services:
  discord-bot:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: discord-ollama-bot
    restart: unless-stopped
    env_file:
      - .env
    volumes:
      - ./logs:/app/logs
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "5"
